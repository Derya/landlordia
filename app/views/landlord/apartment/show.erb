<main class="description">
  <div class="description-container">
    <header>
      <h1>Apartment <%=@apartment.apartment_number%></h1>
    </header>
    <table>
      <tr>
        <td>Lease start</td>
        <td><%=@apartment.lease_start%></td>
      </tr>
      <tr>
        <td>Lease end</td>
        <td><%=@apartment.lease_end%></td>
      </tr>
      <tr>
        <td>Car space ID</td>
        <td><% @apartment.car_spaces.each do |car_space| %>
          <%=car_space.id.to_s %>
          <% end%>
          </td>
      </tr>
      <tr>
        <td>Rent amount</td>
        <td><%=@apartment.rents.last.amount %></td>
      </tr>
      <tr>
        <td>Current tenant name</td>
        <td><%=@apartment.tenant_name%></td>
      </tr>
      <tr>
        <td>Notes</td>
        <td><a href='/landlord/apartment/<%= @apartment.id %>/notes'>See all notes</a></td>
      </tr>
      <tr>
        <td>Tenants</td>
        <td><a href='/landlord/apartment/<%= @apartment.id %>/tenants'>See all tenants</a></td>
      </tr>
      <tr>
        <td>Rents</td>
        <td><a href='/landlord/apartment/<%= @apartment.id %>/rents'>See all rents</a></td>
      </tr>
    </table>
  </div>
</main>

<div id="alerts">

 <%= erb :'_alerts', locals: { mode: "apartment" } %>

</div>