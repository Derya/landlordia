<main class="description">
  <table>
    <thead>
      <tr>
        <th colspan="4">Apartment &num; <%= @apartment.apartment_number %></th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td>Name</td>
          <td>Email</td>
          <td>Phone number </td>
          <td>Status</td>
        </tr>
      <% @ordered_tenants = @tenants.order(active: :desc) %>
      <% @ordered_tenants.each do |tenant|%>
        <tr>
          <td><%= tenant.name %></td>
          <td><%= tenant.email %></td>
          <td><%= tenant.phone_number %></td>
          <td><% if tenant.active%>
              Active
            <% else %>
              Not Active
            <% end %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</main>